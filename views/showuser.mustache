<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="/public/styles.css">
  </head>
  <body>

    <div class="header">
      <table class="display_title">
      <tr>
          <td class="website_title">Pokebase</td>
          <td><img class="pokeball_img" src="/public/pokeball.png"></td>
      </tr>
      <table class="login_table">
        <tr>
          <th colspan="3">
            <span class="username_span">{{#username}}{{.}}{{/username}}</span>
          </th>
        </tr>

        <tr>
          <td class="login_li"><a href="/home/registeruser">Register</a></td>
          <td class="login_li"><a href="/home/userlogin">Login</a></td>
          <td class="login_li"><a href="/home/userlogout">Logout</a></td>
        </tr>
      </table>

      </table>

    </div>

    <table class="navbar">
      <tr>
        <td class="nav_elements"><a href="/home">Home</td>
        <td class="nav_elements"><a href="/home/createpokemon">Add Pokemon</a></td>
        <td class="nav_elements"><a href="/home/{{#userid}}{{.}}{{/userid}}/showuserpokemon">Trainer Pokemon</a></td>
        <td class='nav_elements'><a href='/home/{{#userid}}{{.}}{{/userid}}/traineredit'>Edit Trainer Info</a></td>
      </tr>
    </table>


    <div class= "trainer_page_body">
      {{#user}}
        <tr class="trainer_info">
          <td> <img class='trainer_image' src='{{image}}'></td>
          <td>{{firstname}}</td>
          <td>{{hometown}}</td>
          <td>{{bio}}</td>
          <td>{{age}}</td>

        </tr>

      {{/user}}
    </div>

  </body>
</html>
